<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.briangorski.calendar.model.Event" table="event" >
		<id name="eventID" type="java.lang.Long">
			<column name="EVENT_ID" unique="true"/>
			<generator class="native" />
		</id>
		
		<property name="startTime" type="timestamp">
			<column name="START_TIME" not-null="true" unique="true" />
		</property>
		
		<property name="endTime" type="timestamp">
			<column name="END_TIME" not-null="true" unique="true" />
		</property>

		<property name="description" type="string">
			<column name="DESCRIPTION" length="4000" not-null="true" unique="true" />
		</property>
		
		<set name="notifications" table="event_notification">
			<key column="EVENT_ID" />
            <many-to-many column="NOTIFICATION_ID" class="com.briangorski.calendar.model.Notification" />
		</set>
		
		<set name="users" table="user_event">
			<key column="EVENT_ID" />
            <many-to-many column="USER_ID" class="com.briangorski.calendar.model.User" />
		</set>
		
	</class>
</hibernate-mapping>